{
    "id": "https://raw.githubusercontent.com/wraith13/build.js/master/json-schema.json#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Root",
    "definitions": {
        "TextPathValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "path": {
                    "type": "string"
                },
                "replace": {
                    "type": "object",
                    "properties": {
                        "match": {
                            "type": "string"
                        },
                        "text": {
                            "$ref": "#/definitions/Value"
                        }
                    },
                    "required": [
                        "match",
                        "text"
                    ]
                }
            },
            "required": [
                "path"
            ]
        },
        "BinaryPathValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "path": {
                    "type": "string"
                },
                "encode": {
                    "type": "string",
                    "enum": [ "base64", "hex" ]
                }
            },
            "required": [
                "path", "encode"
            ]
        },
        "PathValue": {
            "oneOf": [
                {
                    "$ref": "#/definitions/TextPathValue"
                },
                {
                    "$ref": "#/definitions/BinaryPathValue"
                }
            ]
        },
        "JsonValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "json": {
                    "type": "string"
                },
                "value": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    ]
                }
            },
            "required": [
                "json"
            ]
        },
        "CallValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "call": {
                    "type": "string",
                    "enum": [
                        "command",
                        "command_options",
                        "timestamp",
                        "timestamp_tick"
                    ]
                }
            },
            "required": [
                "call"
            ]
        },
        "ResourceValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "resource": {
                    "type": "string"
                },
                "base": {
                    "type": "string"
                }
            },
            "required": [
                "resource"
            ]
        },
        "Value": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "$ref": "#/definitions/PathValue"
                },
                {
                    "$ref": "#/definitions/JsonValue"
                },
                {
                    "$ref": "#/definitions/CallValue"
                },
                {
                    "$ref": "#/definitions/ResourceValue"
                }
            ]
        },
        "BuildPrimeTarget": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "template": {
                    "$ref": "#/definitions/Value"
                },
                "output": {
                    "$ref": "#/definitions/PathValue"
                },
                "parameters": {
                    "oneOf": [
                        {
                            "type": "object",
                            "additionalProperties": {
                                "$ref": "#/definitions/Value"
                            },
                            "not":
                            {
                                "required": [ "json"]
                            }
                        },
                        {
                            "$ref": "#/definitions/JsonValue"
                        }
                    ]
                }
            },
            "required": [
                "template",
                "output"
            ]
        },
        "BuildProcessTarget": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "processes": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    ]
                }
            },
            "required": [
                "processes"
            ]
        },
        "BuildReferenceTarget": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "references": {
                    "type": "string"
                }
            },
            "required": [
                "references"
            ]
        },
        "BuildMetaTarget": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "meta": {
                    "$ref": "#/definitions/BuildTarget"
                },
                "parameters": {
                    "oneOf": [
                        {
                            "type": "array",
                            "items":
                            {
                                "type": "object",
                                "additionalProperties": {
                                    "$ref": "#/definitions/Value"
                                },
                                "not":
                                {
                                    "required": [ "json"]
                                }
                            }
                        },
                        {
                            "$ref": "#/definitions/JsonValue"
                        }
                    ]
                }
            },
            "required": [
                "meta",
                "parameters"
            ]
        },
        "BuildTarget": {
            "oneOf": [
                {
                    "$ref": "#/definitions/BuildPrimeTarget"
                },
                {
                    "$ref": "#/definitions/BuildProcessTarget"
                },
                {
                    "$ref": "#/definitions/BuildReferenceTarget"
                },
                {
                    "$ref": "#/definitions/BuildMetaTarget"
                }
            ]
        },
        "SinglePrimeMode": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "base": {
                    "type": "string"
                },
                "template": {
                    "$ref": "#/definitions/Value"
                },
                "output": {
                    "$ref": "#/definitions/PathValue"
                },
                "parameters": {
                    "oneOf": [
                        {
                            "type": "object",
                            "additionalProperties": {
                                "$ref": "#/definitions/Value"
                            },
                            "not":
                            {
                                "required": [ "json"]
                            }
                        },
                        {
                            "$ref": "#/definitions/JsonValue"
                        }
                    ]
                }
            },
            "required": [
            ]
        },
        "SingleMode": {
            "oneOf": [
                {
                    "$ref": "#/definitions/SinglePrimeMode"
                },
                {
                    "$ref": "#/definitions/BuildProcessTarget"
                },
                {
                    "$ref": "#/definitions/BuildReferenceTarget"
                }
            ]
        },
        "MultiMode": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "base": {
                    "type": "string"
                },
                "steps": {
                    "type": "array",
                    "items":
                    {
                        "$ref": "#/definitions/BuildTarget"
                    }
                },
                "parameters": {
                    "oneOf": [
                        {
                            "type": "object",
                            "additionalProperties": {
                                "$ref": "#/definitions/Value"
                            },
                            "not":
                            {
                                "required": [ "json"]
                            }
                        },
                        {
                            "$ref": "#/definitions/JsonValue"
                        }
                    ]
                }
            },
            "required": [
                "steps"
            ]
        },
        "Mode": {
            "oneOf": [
                {
                    "$ref": "#/definitions/SingleMode"
                },
                {
                    "$ref": "#/definitions/MultiMode"
                }
            ]
        },
        "Root": {
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "modes": {
                    "type": "object",
                    "properties": {
                        "default": {
                            "$ref": "#/definitions/Mode"
                        }
                    },
                    "additionalProperties": {
                        "$ref": "#/definitions/Mode"
                    },
                    "required": [
                    ]
                }
            },
            "required": [
                "$schema",
                "modes"
            ]
        }
    }
}
